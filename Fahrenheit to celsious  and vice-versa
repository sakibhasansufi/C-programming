/*1. farenheit to celcious 
 2. celcious to fahrenheit*/
#include<stdio.h>
int main ()
{
    int ch;
    float far,cel;
    printf("Enter your choice\n");
    printf("1.Farenheight to celcious\n2. Celcious to farenheight\n",ch);
    scanf("%d",&ch);
    switch(ch)
    {
        case 1:
        printf("enter your farenheight\n",far);
        scanf("%f",&far);
        cel=(far-32)/1.8;
        printf("celcious score is =%.2f",cel);
        break;
        
        case 2:
        printf("enter your celcious\n",far);
        scanf("%f",&cel);
        far=(cel*1.8)+32;
        printf("farenheight  score is =%.2f",far);
        break;

        default:
        printf("wrong input");

    }
}
